<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-item nav-link active" asp-controller="Home" asp-action="List" title="Welcome">Welcome @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("List", "Home")">
                <a class="nav-item nav-link active" asp-controller="Account" asp-action="Logout">Logout</a>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-item nav-link active" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>